{
  "compilerOptions": {
    // "target": "es2017",
    "allowJs": true,
    "module": "commonJS",
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "__tests__"]
}
